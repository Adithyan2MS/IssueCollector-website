<section>
    <div class="container">
        <h1 class="text-center p-5 text-danger">Admin Panel</h1>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Location</th>
                    <th scope="col">Description</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each details}}
                <tr>
                    <td>{{this.Name}}</td>
                    <td>{{this.Location}}</td>
                    <td>{{this.Description}}</td>
                    <td><img style="width:50px;height:50px" src="/images/{{this._id}}.jpg" alt=""></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>